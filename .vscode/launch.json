{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Main Application",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/mailchats_app.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run Integration Tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/test_python_integration.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Run Standalone Tool",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/standalone_tool.py",
      "args": ["build"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Debug Current Python File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}